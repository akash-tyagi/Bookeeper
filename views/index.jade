extends layout

block content
  .page-header
    h1 User Profile
    
  .row
    .span2
      ul(class="nav nav-list well")
        li(class="nav-header")
          |Cover Pic
        li
          img(src="images/profilePic.jpg" alt="Profile Image" class="img-rounded")
      
      include ./sidebar.jade
    .span10
      table(class="table table-striped table-bordered")
        thead
          tr
            th Name
            th Email
            th Total Read
            th Currenlty Reading
            th Need To Read
            th Option
        tbody
          tr
            td #{user.name}
            td #{user.email}
            td #{totalRead}
            td #{currentlyReading}
            td #{toRead}
            td 
             a(class="btn btn-info" href="/update" role="button") Update Profile
              
    