extends ../layout

block content
  .page-header
    h1 Author Profile Page
    
  .row
    .span2
        include ../sidebar.jade

    .span10
      table(class="table table-striped table-bordered")
        thead
          tr
            th(class="span2") Id
            th(class="span5") Name
        tbody
          tr
            td(class="span2") #{author.id}
            td(class="span5") #{author.name}
      h4 Books Published
      table(class="table table-striped table-bordered" id="books")
        thead
          tr
            th Book ID
            th Name
            th ISBN
            th Published

            th Option
        tbody
          if books
            for book in books
              tr
                td #{book.id}
                td #{book.title}
                td #{book.ISBN}
                td #{book.published}
                td
                  a(class="btn btn-success" href="/books/#{book.id}" role="button") Details