extends ../layout

block content
  .page-header
    h1 #{title}
    
  .row
    .span2
      include ../sidebar.jade
    .span10
      table(class="table table-striped table-bordered" id="books")
        thead
          tr
            th Author ID
            th Name
            th Option
        tbody
          if authors
            for author in authors
              tr
                td #{author.id}
                td #{author.name}
                td
                  a(class="btn btn-success" href="/authors/#{author.id}" role="button") Details