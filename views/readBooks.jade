extends layout

block content
  .page-header
    h1 #{title}
    
  .row
    .span3
      ul(class="nav nav-list well")
        li(class="nav-header")
          |Options
        li
          a(href="/users/"+id+"/books/") Books Read
          a(href="/users/"+id+"/books/unread") Books To Read

    .span9
      table(class="table table-striped table-bordered")
        thead
          tr
            th(class="span2") Book Name
            th(class="span7") Published
            th(class="span1") Option
        tbody
          for book in books
            tr
              td(class="span2") #{book.name}
              td(class="span6") #{book.published}
              td(class="span1")
                if read
                  a(class="btn btn-danger" href="#" role="button") Delete
                else
                  a(class="btn btn-success" href="#" role="button") Details
                  

                  