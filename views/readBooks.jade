extends layout

block content
  .page-header
    h1 #{title}
    
  .row
    .span2
      include ./sidebar.jade
    .span10
      table(class="table table-striped table-bordered" id="books")
        thead
          tr
            th Book ID
            th Name
            th ISBN
            th Published

            th Option
        tbody
          if books
            for book in books
              tr
                td #{book.id}
                td #{book.title}
                td #{book.ISBN}
                td #{book.published}
                td
                  a(class="btn btn-success" href="/books/profile/#{book.id}" role="button") Details
      if title == 'Books To Be Read'
        nav 
          ul(class="pager")
            li(class="previous")
              a(href="")
                span(aria-hidden="true") &larr;
                |Previous
            li(class="next")
              a(href="")
                span(aria-hidden="true") &rarr;
                |Next            